@model IEnumerable<AppointmentManagementSystem.ViewModels.AppointmentVm>
@{
    int count = 1;
}
<table class="table table-striped table-bordered custrom-table mb-2 mt-4" id="table" >
    <thead>
        <tr>
            <th>SL</th>
            <th>Date</th>
            <th>Appointment Type</th>
            <th>Visitor Name</th>
            <th>Visitor Dob</th>
            <th>Gender</th>
            <th>Service Time</th>
            <th>Appointment SL No</th>
            <th>Time Slot</th>
            <th>Appointment Status</th>
            <th>Payment Amount</th>
            <th>Discount Amount</th>
            <th>Payment Status</th>
            <th>Entry Time</th>
            <th>Exit Date</th>
            <th>Entry By</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@(count++)</td>
                <td>@item.Date</td>
                <td>@item.AppointmentType</td>
                <td>@item.VisitorName</td>
                <td>@item.VisitorDob</td>
                <td>@item.Gender</td>
                <td>@item.ServiceTime</td>
                <td>@item.SLNo</td>
                <td>@item.TimeSlot</td>
                <td>@item.AppointmentStatus</td>
                <td>@item.PaymentAmount</td>
                <td>@item.PaymentStatus</td>
                <td>@item.EntryTime</td>
                <td>@item.ExitDate</td>
                <td>@(item.IsSelfAppointment?"Self":"Representative")</td>
                <td>
                    
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {       
            $("#Appointment").css("display", "block");
            $("#AppointmentList").addClass("active");
            //loadData();      
        $('#table').DataTable();
    });
</script>