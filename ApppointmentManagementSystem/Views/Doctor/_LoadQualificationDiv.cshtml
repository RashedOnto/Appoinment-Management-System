<div class="row">
    <div class="col-md-6">
        <h4 class="float-left">Doctor Qualifications</h4>
    </div>
    <div class="col-md-6">
        <button class="btn btn-primary float-right Font-Size mb-2" onclick="OpenQualificationAddEditModal()"><i class="fa fa-plus mr-1"></i>Add Qualification</button>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Doctor Name</label>
            &nbsp;<span class="text-danger">*</span>
            @Html.DropDownList("DoctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"),"---Select Doctor---", new { @class = "form-control",@onchange="LoadQualification()"})
        </div>
    </div>
</div>
<div id="detailsQualification"></div>



<div class="modal fade bd-example-modal-lg" id="doctorQualificationAddEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Add Doctor Qualification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseModalQualificaion()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" name="Id" id="IdInputQ" class="form-control" />

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Doctor Name</label>
                            &nbsp;<span class="text-danger">*</span>
                            @Html.DropDownList("DoctorIdQ", new SelectList(ViewBag.DoctorList, "Id", "Name"),"---Select Doctor---", new { @class = "form-control",@name="DoctorId"})
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Degree Name</label>
                            &nbsp;<span class="text-danger">*</span>
                            <input name="DegreeName" required="required" id="degreeName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Institute Name</label>
                            &nbsp;<span class="text-danger">*</span>
                            <input type="text" name="InstituteName" id="instituteName" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Passing Year</label>
                            &nbsp;<span class="text-danger">*</span>
                            <input type="number" name="PassingYear" id="passingYear" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Achievement</label>
                            <input name="Achievement" class="form-control" id="achievement" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Country</label>
                            &nbsp;<span class="text-danger">*</span>
                            <input name="Country" class="form-control" id="country" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseModalQualificaion()">Close</button>
                <button name="btnValue" id="submitBtnQ" class="btn btn-primary" onclick="AddDoctorQualification()">Save</button>
            </div>
        </div>
    </div>
</div>

