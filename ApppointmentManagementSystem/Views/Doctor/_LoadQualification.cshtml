@using AppointmentManagementSystem.Common;

@model ICollection<AppointmentManagementSystem.Models.DoctorQualifications>

@{
    int count = 1;
}
<table class="table table-striped table-bordered custrom-table mb-2 mt-4" id="table">
    <thead>
        <tr>
            <th>SL</th>
            <th>Degree Name</th>
            <th>Institute Name</th>
            <th>Country</th>
            <th>Passing Year</th>
            <th>Achievement</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
            <tr>
                <td>@(count++)</td>
               
                <td>@item.DegreeName</td>
                <td>@item.InstituteName</td>
                <td>@item.Country</td>
                <td>@item.PassingYear</td>
                <td>@item.Achievement</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary text-center" alt="Edit" onclick="EditDoctorQualification(@item.Id,'@item.DoctorId','@item.DegreeName','@item.InstituteName',@item.PassingYear,'@item.Country','@item.Achievement')"><i class="fa fa-edit mr-1"></i></button>
                    <button class="btn btn-sm btn-danger text-center" alt="Delete" onclick="DeactivateDoctorQualification(@item.Id)"> <i class="fa fa-trash mr-1"></i></button>
                   
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>