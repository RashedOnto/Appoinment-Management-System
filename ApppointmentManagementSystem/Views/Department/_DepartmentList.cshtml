<table class="table table-striped table-bordered custrom-table mb-2 mt-4" id="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary" onclick="EditDepartment('@item.Id', '@item.Name')">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="DeActiveDepartment(@item.Id)">Delete</button>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>