@model AppointmentManagementSystem.Models.Department
@{
    ViewData["Title"] = "Add Department";

}

<style>
    Font-Size {
        font-size: 15px;
    }
</style>
@*<div class="ml-5 mt-2 h6"><label> Settings > Add Organization</label></div>*@
<div class="bg-white p-3 ml-4 mr-5">
    <div class="row">
        <div class="col-4">
            <h4 class="float-left">Add Department</h4>
        </div>
        <div class="text-center col-4">
            <div id="successDiv" class="text-center Font-Size" style="color: green">@ViewBag.SuccessMessage</div>
            <div id="errorDiv" class="text-center Font-Size" style="color: red">@ViewBag.ErrorMessage</div>
        </div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-primary float-right Font-Size mb-2">Back to list</a>
        </div>
    </div>
    <form asp-action="Add" class="form-signin create-form bg-white rounded border shadow-sm p-4">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    &nbsp;<span class="text-danger">*</span>
                    <input asp-for="Id" type="hidden" id="id" class="form-control" />
                    <input asp-for="Name" required="required" class="form-control" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="mt-2 text-white">.</div>
                    <input type="submit" name="btnValue" id="submitBtn" value="Save" class="btn btn-primary form-control" />

                </div>
            </div>
        </div>
    </form>
</div>

@section scripts
    {
    <script>
        $(document).ready(function () {

        });
    </script>
}