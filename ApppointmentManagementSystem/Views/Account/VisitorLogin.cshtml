@{
    ViewData["Title"] = "Visitor Log in";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Appointment Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/Design/css/font-awesome.min.css" rel="stylesheet" />

</head>

<body class="bg">
    <div class="container-fluid conya">
        <div class="row">
            <div class="col-md-4 mx-auto card p-2 shadow" style="margin-top:5%">
                <section class="m-3">
                    <form method="post" action="/Account/VisitorLogin">
                        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                        <h3 class="text-center">Visitor Sign In</h3>
                        <div class="form-group mt-2">
                            <label>Mobile No</label>
                            <input name="Email" id="Email" type="text" class="form-control" />
                            <span id="mobileError" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Password</label>
                            <input name="Password" type="password" class="form-control" />

                            <span id="Password" class="text-danger"></span>
                        </div>
                        <div class="mt-3">
                            <input id="login-submit" type="submit" class="w-100 btn text-white py-2" style="background-color:#10a37f" value="Log In" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 float-left">
                                <p class="mt-1">Already register? <a href="/Account/Register?returnUrl=@ViewBag.ReturnUrl" class="text-success">Sign Up</a></p>
                            </div>
                            <div class="col-md-6 mt-1" style="text-align: right;"><a href="">Forgotten password?</a></div>
                        </div>
                        
                        <div class="row mx-1">
                            <div class="col-5">
                                <p class="line"></p>
                            </div>
                            <div class="col-2 text-center">
                                <p>OR</p>
                            </div>
                            <div class="col-5">
                                <p class="line"></p>
                            </div>
                        </div>
                        <a href="" class="btn bg-white border border-dark w-100">
                            <img src="/images/googlelogo.png" style="margin-right: 10px;width: 30px;">Continue with Google
                        </a>
                        <a href="/Account/MobileGet?returnUrl=@ViewBag.ReturnUrl" class="btn bg-white border border-dark w-100 mt-3"><img src="~/images/mobile-circle-logo.png" style="margin-right: 10px;width: 30px;" />Login By OTP</a>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

</html>
<style>
    .bg {
        background-image: url('../../Images/bg.jpg');
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-color: rgba(255, 255, 255, 0.5);
    }

    .shadow {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,0.7) !important
    }
    .line{
        height: 1px;
        background: #b7b6b6;
        margin-top: 12px;
    }

    .googleButton {
        display: flex;
        position: relative;
        padding: 0 8px 0 52px;
        background: #fff;
        align-items: center;
        width: 100%;
        font-size: 16px;
        font-family: inherit;
        height: 52px;
        border: 1px solid #c2c8d0;
        border-radius: 3px;
        color: #2d333a;
        cursor: pointer;
        outline: 0;
        transition: box-shadow .15s ease-in-out,background-color .15s ease-in-out;
    }

    }
</style>
