@using AppointmentManagementSystem.Common
@model IEnumerable<AppointmentManagementSystem.ViewModels.UserInfoVm>
@{
    int count = 1;
}
<table class="table table-striped table-bordered custrom-table mb-2 mt-4" id="table">
    <thead>
    <tr>
        <th>SL</th>
        <th>Image</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Father Name</th>
        <th>Mother Name</th>
        <th>Designation</th>
        <th>DOB</th>
        <th>Role</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var source = "";
            if (item.Image != null)
            {
                source = Utility.PathToBase64(item.Image);
            }
            <tr>
                <td> @(count++)</td>
                <td>
                    <img src="@source" style="height: 40px; width: 40px; border-radius: 50%;" />
                </td>
                <td>@item.Name</td>
                <td>@item.Mobile</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.FatherName</td>
                <td>@item.MotherName</td>
                <td>@item.Designation</td>
                <td>@string.Format("{0:dd/MM/yyyy}", item.DOB)</td>
                <td>@item.Role</td>
                <td>
                    <button type="button" class="btn btn-sm btn-primary"
                            onclick="EditUser('@item.Id', '@item.Name',@item.DesignationId,@item.BranchId,'@item.Mobile','@string.Format("{0:dd/MM/yyyy}", item.DOB)','@item.Gender','@item.FatherName','@item.MotherName','@item.Email','@item.RoleId','@source')">
                        <i class="fa fa-edit mr-1"></i>
                    </button>
                    <button class="btn btn-sm btn-danger" onclick="DeActiveUser('@item.Id')"><i class="fa fa-trash mr-1"></i></button>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>