@model IEnumerable<AppointmentManagementSystem.ViewModels.AppointmentEntryVm>
@{
    Layout = null;
    int count = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Self Appointment List</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/design/css/datatable.min.css" rel="stylesheet" />
    <link href="~/Design/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        .bg {
            background-image: url('../../Images/bg.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-color: rgba(255, 255, 255, 0.5);
        }

        .shadow {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,0.7) !important
        }
    </style>
</head>
<body class="bg">
    <div class="justify-content-center p-5 m-5 mt-2">
        <div class="row bg-white rounded border shadow-sm p-4">
            <div class="col-md-12 bg-warning mb-2">
                <h4 class="text-center my-2">Self Appointment List</h4>
            </div>
            <div class="text-center">
                @if (ViewBag.SuccessMessage != null)
                {
                    <div id="SuccessMessage" style="display: none;">@ViewBag.SuccessMessage</div>
                    <div id="toast-data" data-toast-type="success" style="display: none;"></div>
                }
                @if (ViewBag.ErrorMessage != null)
                {
                    <div id="ErrorMessage" style="display: none;">@ViewBag.ErrorMessage</div>
                    <div id="toast-data" data-toast-type="error" style="display: none;"></div>
                }
            </div>

            <div class="mb-3 mt-4" style="overflow:auto">
                <table class="table table-striped table-bordered custrom-table mb-2 mt-4" id="table">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Age</th>
                            <th>Appointment Serial No</th>
                            <th>Appointment Type</th>
                            <th>Branch Name</th>
                            <th>Department Name</th>
                            <th>Doctor Name</th>
                            <th>Date</th>
                            <th>Time Slot</th>
                            <th>Payment Amount</th>
                            <th>Discount Amount</th>
                            <th>Appointment Status</th>
                            <th>Entry Time</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@(count++)</td>
                                <td>@item.PatientName</td>
                                <td>@item.PatientGender</td>
                                <td>@item.PatientAge</td>
                                <td>@item.SLNO</td>
                                <td>@item.AppointmentTypeName</td>
                                <td>@item.BranchName</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.DoctorName</td>
                                <td>@string.Format("{0:dd/MM/yyyy}", item.Date)</td>
                                <td>@item.TimeSlot</td>
                                <td>@item.PaymentAmount</td>
                                <td>@item.DiscountAmount</td>
                                <td>
                                    @if (item.AppointmentStatus == "Entry")
                                    {
                                        <span class="bg-green text-white px-3 py-1">@item.AppointmentStatus</span>
                                    }
                                    else if (item.AppointmentStatus == "Pending")
                                    {
                                        <span class="bg-warning text-white px-3 py-1">@item.AppointmentStatus</span>
                                    }
                                    else
                                    {
                                        <span class="bg-danger text-white px-3 py-1">@item.AppointmentStatus</span>
                                    }
                                </td>

                                <td>
                                    @if (item.AppointmentStatus == "Entry")
                                    {
                                        @string.Format("{0:dd/MM/yyyy}", item.EntryTime)
                                    }
                                    else
                                    {
                                        <p>N/A</p>
                                    }
                                </td>
                                <td>
                                    @if (item.AppointmentStatus == "Pending")
                                    {
                                        <a class="btn btn-sm btn-danger text-center" title="Cancel Appointment" asp-action="CancelAppointment" asp-route-id="@item.Id"> <i class="fa fa-trash mr-2"></i></a>
                                        <a class="btn btn-sm btn-primary text-center" title="Reschedule Appointment" asp-action="GetAppointment" asp-route-doctorId="@item.DoctorId" asp-route-branchId="@item.BranchId" asp-route-departmentId="@item.DepartmentId" asp-route-id="@item.Id" alt="Reschedule"><i class="fa fa-calendar mr-2" aria-hidden="true"></i></a>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Design/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/design/js/jquery.datatables.min.js"></script>
<script src="~/js/sweetalert.all.min.js"></script>
<script src="~/js/SweetAlert.js"></script>
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>